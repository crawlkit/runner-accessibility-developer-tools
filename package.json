{
  "name": "crawlkit-runner-accessibility-developer-tools",
  "description": "A CrawlKit runner for running the Google Chrome a11y developer tools",
  "main": "src/index.js",
  "scripts": {
    "test": "mocha",
    "lint": "eslint .",
    "postinstall": "validate-commit-msg",
    "tdd": "mocha --watch --reporter min",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/crawlkit/runner-accessibility-developer-tools.git"
  },
  "keywords": [
    "crawlkit",
    "a11y",
    "accessibility",
    "axs"
  ],
  "author": "Joscha Feth <joscha@feth.com>",
  "license": "MIT",
  "files": [
    "src",
    "examples/tonic.js"
  ],
  "bugs": {
    "url": "https://github.com/crawlkit/runner-accessibility-developer-tools/issues"
  },
  "homepage": "https://github.com/crawlkit/runner-accessibility-developer-tools#readme",
  "devDependencies": {
    "almond": "^0.3.2",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "crawlkit": "^2.0.1",
    "cz-conventional-changelog": "^1.1.7",
    "eslint": "^2.8.0",
    "eslint-config-airbnb": "^7.0.0",
    "eslint-plugin-jsx-a11y": "^0.6.2",
    "eslint-plugin-react": "^6.2.1",
    "freeport": "^1.0.5",
    "http-server": "^0.9.0",
    "mocha": "^2.4.5",
    "semantic-release": "^4.3.5",
    "validate-commit-message": "^3.0.1"
  },
  "dependencies": {
    "accessibility-developer-tools": "^2.10.0",
    "html-context": "^1.0.6"
  },
  "peerDependencies": {
    "crawlkit": ">=1.5.4"
  },
  "engines": {
    "node": ">=4.2"
  },
  "tonicExampleFilename": "examples/tonic.js",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
